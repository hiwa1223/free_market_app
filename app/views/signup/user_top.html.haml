.new-user-top
  .new-user-top__header
    = render 'users/sessions-header'
  .new-user-top__contents
    .new-user-top__contents__header
      新規会員登録
    .new-user-top__contents__body
      =link_to session1_signup_index_path , class:"mail link" do
        = icon('far', 'envelope',  class: "btn--icon")
        メールアドレスで登録
      = link_to  user_facebook_omniauth_authorize_path, method: :post,class:"facebook link" do
        = icon('fab', 'facebook-square',  class: "btn--icon")
        Facebookで登録
      = link_to user_google_oauth2_omniauth_authorize_path, method: :post, class:"google link" do
        = icon('fab', 'google',  class: "btn--icon google--icon")
        %span{class: "value"}Googleで登録
  =render "users/users-footer"