.signin
  .signin__container
    .signin__container__header
      =render "users/sessions-header"
    .signin__container__box
      .signin__container__box__section.head
        %p アカウントをお持ちでない方はこちら
        .btn.registration
          = link_to new_user_registration_path do
            新規会員登録
      .signin__container__box__section.content
        .btn.facebook
          = link_to 'Facebookでログイン', user_facebook_omniauth_authorize_path, method: :post
          = icon('fab', 'facebook-square')
        .btn.google
          = link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, method: :post
          = icon('fab', 'google')
        %input{ placeholder: "メールアドレス" }
        %input{ placeholder: "パスワード" }
        .robbot
        .btn.log_in
          = link_to '#' do
            ログイン
          %p.blue パスワードをお忘れの方 
    .signin__container__footer
      =render "users/users-footer"