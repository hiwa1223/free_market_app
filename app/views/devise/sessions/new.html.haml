.signin
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .signin__container
      .signin__container__header
        =render "users/sessions-header"
      .signin__container__box
        .signin__container__box__section.head
          %p アカウントをお持ちでない方はこちら
          .btn.registration
            = link_to user_top_signup_index_path do
              新規会員登録
        .signin__container__box__section.content
          .btn.facebook
            = link_to '#' do
              Facebookでログイン
            = icon('fab', 'facebook-square')
          .btn.google
            = link_to '#',class:'b' do
              Googleでログイン
            = icon('fab', 'google')
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" 
          = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" 
          .robbot
            = flash[:recaptcha_error]
            = recaptcha_tags
          .btn.log_in
            = f.submit 'ログイン' 
            %p.blue パスワードをお忘れの方 
      .signin__container__footer
        =render "users/users-footer"
